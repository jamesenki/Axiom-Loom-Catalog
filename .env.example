# Axiom Loom Catalog Configuration Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000
REACT_APP_API_PORT=3001
SERVER_PORT=3001

# Network Configuration
# Set HOST to your local IP for network access (e.g., 192.168.1.100)
HOST=localhost
PUBLIC_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:3001
# Set to true to allow access from other devices on network
DANGEROUSLY_DISABLE_HOST_CHECK=false

# GitHub Configuration
GITHUB_ORGANIZATION=jamesenki
# Optional: GitHub Personal Access Token for private repos
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=
# Set to true if using GitHub CLI authentication (gh auth)
USE_GH_CLI=false

# Security (Required - will be auto-generated if missing)
JWT_SECRET=your-jwt-secret-here-min-32-chars
SESSION_SECRET=your-session-secret-here-min-32-chars

# Demo Mode
DEMO_MODE=true
BYPASS_AUTH=true
REACT_APP_BYPASS_AUTH=true

# Database (Optional)
# MongoDB connection string for persistent storage
MONGODB_URI=

# Optional Features
ENABLE_CORS=true
ENABLE_RATE_LIMIT=true
ENABLE_ANALYTICS=false

# Deployment Information (Auto-filled)
DEPLOYMENT_ID=
DEPLOYED_AT=
DEPLOYED_BY=
LOCAL_IP=

# Advanced Configuration
# Redis for caching (optional)
REDIS_URL=

# Sentry for error tracking (optional)
SENTRY_DSN=

# OAuth Configuration (optional)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_CALLBACK_URL=

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Performance
MAX_WORKERS=4
CACHE_TTL=3600
REQUEST_TIMEOUT=30000

# Repository Sync
AUTO_SYNC=false
SYNC_INTERVAL=3600000
MAX_REPO_SIZE=100

# API Rate Limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.md,.json,.yaml,.yml,.txt

# Search
SEARCH_INDEX_PATH=./search-index
ENABLE_FUZZY_SEARCH=true
SEARCH_MIN_SCORE=0.3