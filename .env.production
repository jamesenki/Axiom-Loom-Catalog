# Production Environment Configuration
# IMPORTANT: Update all passwords and secrets before deploying!

# Environment
NODE_ENV=production

# API URLs - Update with your domain
REACT_APP_API_URL=https://api.axiom-loom.ai
CORS_ORIGIN=https://axiom-loom.ai

# MongoDB Configuration
MONGO_ROOT_USER=prodadmin
MONGO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
MONGO_DATABASE=axiom_loom_prod

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# JWT and Security
JWT_SECRET=CHANGE_THIS_VERY_LONG_RANDOM_JWT_SECRET
SESSION_SECRET=CHANGE_THIS_VERY_LONG_SESSION_SECRET

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Network Configuration
HOST_BINDING=0.0.0.0

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/axiom-loom.ai/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/axiom-loom.ai/privkey.pem